{% extends 'adminbase.html.twig' %}

{% block title %} Üye Listesi{% endblock %}

{% block content %}

    <div class="main-content">
        <h3> Üye Listesi</h3>
        <div class="panel">
            <div class="panel-heading">
                <h1>
                    <small><a href="{{ path('admin_user_new') }}" class="btn btn-info">Yeni Üye Ekle</a></small>
                </h1>

            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Durum</th>
                        <th>Roller</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in users %}
                        <tr>
                            <td>{{ row.id }}</td>
                            <td>{{ row.name }}</td>
                            <td>{{ row.email }}</td>
                            <td>{{ row.status }}</td>
                            <td>{% for item in row.roles %}
                                    {{ item }}
                                {% endfor %}</td>
                            <td><a href="{{ path('admin_user_edit', {'id':row.id }) }}"  class="btn btn-primary">Düzenle</a></td>
                            <td><a href="{{ path('admin_user_delete', {'id':row.id }) }}"  onclick="return confirm('Kullanıcıyı Silmek İstediğinizden Emin Misiniz?');" class="btn btn-primary"><i class="fa fa-trash-o"></i>Sil</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

{% endblock %}
