
<div class="col-sm-9 padding-right">
    <div class="features_items"><!--features_items-->
        <h2 class="title text-center">En Çok Tercih Edilenler</h2>
        {% for rs in tercih %}
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt="" />
                        <h2>{{ rs.sprice }} TL</h2>
                        <p>{{ rs.title }}</p>
                        <a href="{{ path('product_detail', {'id': rs.id }) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            <h2>{{ rs.sprice }} TL</h2>
                            <p>{{ rs.title }}</p>
                            <a href="{{ path('product_detail', {'id': rs.id }) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Ürünü İncele</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
</div>
</div>
</div>
</section>