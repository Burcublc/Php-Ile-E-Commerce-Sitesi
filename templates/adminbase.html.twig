<!doctype html>
<html lang="tr">

<head>
    <title>{% block title %}Admin Panel{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/vendor/linearicons/style.css">
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/vendor/toastr/toastr.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="{{ asset('admin') }}/assets/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('admin') }}/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('admin') }}/assets/img/favicon.png">

    <script language="JavaScript" type="text/javascript">
            function openWin(windowsURL,windowName,windowsFeatures){ window.open(windowsURL,windowName,windowsFeatures);}

    </script>
    <script src="https://cdn.ckeditor.com/ckeditor5/11.2.0/classic/ckeditor.js"></script>

</head>

<body>
<!-- WRAPPER -->
<div id="wrapper">
    <!-- NAVBAR -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="brand">
            <a href="{{ url('admin') }}"><img src="{{ asset('admin') }}/assets/img/logo-dark.png" alt="Klorofil Logo" class="img-responsive logo"></a>
        </div>
        <div class="container-fluid">
            <div class="navbar-btn">
                <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
            </div>


            <div id="navbar-menu">
                <ul class="nav navbar-nav navbar-right">


                    <li class="dropdown">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <span>{{ app.user.name }}</span> <i class="icon-submenu lnr lnr-chevron-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ url('admin') }}"><i class="lnr lnr-user"></i> <span>Profilim</span></a></li>
                            <li><a href="{{ path('admin_setting_index') }}"><i class="lnr lnr-cog"></i> <span>Ayarlar</span></a></li>
                            <li><a href="{{ path('app_logout') }}"><i class="lnr lnr-exit"></i> <span>Çıkış Yap</span></a></li>
                        </ul>
                        {% else %}
                            <p>Login Olunmadı.</p>
                        {% endif %}
                    </li>
                    <!-- <li>
                        <a class="update-pro" href="https://www.themeineed.com/downloads/klorofil-pro-bootstrap-admin-dashboard-template/?utm_source=klorofil&utm_medium=template&utm_campaign=KlorofilPro" title="Upgrade to Pro" target="_blank"><i class="fa fa-rocket"></i> <span>UPGRADE TO PRO</span></a>
                    </li> -->
                </ul>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->
    <!-- LEFT SIDEBAR -->
    <div id="sidebar-nav" class="sidebar">
        <div class="sidebar-scroll">
            <nav>
                <ul class="nav">
                    <li><a href="{{ url('admin') }}" class=""><i class="lnr lnr-home"></i> <span>Anamenü</span></a></li>
                    <li><a href="{{ url('admin_user') }}" class=""> <i class="lnr lnr-user"></i> <span>Üyeler</span></a></li>
                    <li><a href="{{ path('admin_product_index') }}" class=""><i class="lnr lnr-gift"></i> <span>Ürünler</span></a></li>
                    <li><a href="{{ path('admin_category_index') }}" class=""><i class="lnr lnr-select"></i> <span>Kategoriler</span></a></li>
                    <li>
                        <a href="#subPages" data-toggle="collapse" class="collapsed"><i class="lnr lnr-file-empty"></i> <span>Siparişler</span> <i class="icon-submenu lnr lnr-chevron-left"></i></a>
                        <div id="subPages" class="collapse ">
                            <ul class="nav">
                                <li><a href="{{ path('admin_orders_index',{'slug':'new'}) }}" class="">Yeni Siparişler</a></li>
                                <li><a href="{{ path('admin_orders_index',{'slug':'accepted'}) }}" class="">Onaylanan Siparişler</a></li>
                                <li><a href="{{ path('admin_orders_index',{'slug':'inshipping'}) }}" class="">Kargolanan Siparişler</a></li>
                                <li><a href="{{ path('admin_orders_index',{'slug':'canceled'}) }}" class="">İptal Edilen Siparişler</a></li>
                                <li><a href="{{ path('admin_orders_index',{'slug':'completed'}) }}" class="">Tamamlanan Siparişler</a></li>
                            </ul>
                        </div>
                    </li>
                    <li><a href="{{ path('admin_messages_index') }}" class=""><i class="fa fa-envelope"></i> <span>Üye Mesajları</span></a></li>
                    <li><a href="{{ path('admin_setting_index') }}" class=""><i class="lnr lnr-cog"></i> <span>Ayarlar</span></a></li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- END LEFT SIDEBAR -->
    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        {% block content %}
        <div class="main-content">
            <div class="container-fluid">
                <h3 class="page-title">Boş sayfaa</h3>
                <div id="toastr-demo" class="panel">

                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->
    {% endblock %}

    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="{{ asset('admin') }}/assets/vendor/jquery/jquery.min.js"></script>
    <script src="{{ asset('admin') }}/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="{{ asset('admin') }}/assets/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="{{ asset('admin') }}/assets/vendor/toastr/toastr.min.js"></script>
    <script src="{{ asset('admin') }}/assets/scripts/klorofil-common.js"></script>

    {% block javascript%}  {% endblock %}
</body>

</html>
