                                    <li><a href="{{ path('app_login') }}"><i class="fa fa-check"></i> Hesabım</a></li>
                                    <li><a href="{{ path('orders_index') }}"><i class="fa fa-check"></i> Siparişlerim</a></li>
                                    <li><a href="{{ path('shopcart_index') }}"><i class="fa fa-shopping-cart"></i>Sepetim</a></li>
                                    <li><a href="{{ path('app_logout') }}">Çıkış</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                {% else %}
                <div class="col-sm-8">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('app_login') }}"><i class="fa fa-lock"></i> Oturum Aç</a></li>
                            <li><a href="{{ path('new_user') }}"><i class="fa fa-level-up"></i> Üye Ol</a></li>
                        </ul>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div><!--/header-middle-->

    <div class="header-bottom"><!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li><a href="{{ asset('home') }}" class="active">Anasayfa</a></li>
                            <li><a href="{{ path('hakkimizda') }}">Hakkımızda</a>
                            <li><a href="{{ path('referanslar') }}">Ürün İade</a></li>
                            </li>
