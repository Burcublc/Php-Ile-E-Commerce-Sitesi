{% extends 'adminbase.html.twig' %}

{% block title %} Üye Bilgilerini Düzenleme{% endblock %}

{% block content %}
    <div class="main-content">
      <h1>
          Üye Düzenleme

      </h1>
    </div>

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Üye Bilgilerini Düzenleme</h3>
        </div>
        <form method="post">
        <div class="panel-body">

            <p>Adı Soyadı</p>
            <div class="input-group" >

                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input class="form-control"  name="users[name]" value="{{ users.name }}" placeholder="Ad ve Soyad" type="text">
            </div>
           <br>
            <p>Email</p>
            <input type="email" name="users[email]" value="{{ users.email }}" class="form-control" placeholder="Mail">
            <br>
            <p>Password</p>
            <input type="password" name="users[password]" value="{{ users.password }}" class="form-control" placeholder="Şifre">
            <br>
            <p>Kullanıcı Tipi</p>
            <select name="users[roles]" class="form-control">
                {% for item in users.roles %}
                <option>{{ item }}</option>
                {% endfor %}
                <option>ROLE_ADMİN</option>
                <option>ROLE_USER</option>
            </select>
            <br><p>Aktiflik Durumu</p>
            <select name="users[status]" class="form-control">
                <option>{{ users.status }}</option>
                <option value="true">True</option>
                <option value="false">False</option>

            </select>
            <br><br>

            <button type="submit" class="btn btn-warning pull-right">Kaydet</button>

        </form>

            </div>

    <!-- END MAIN CONTENT -->

{% endblock %}
