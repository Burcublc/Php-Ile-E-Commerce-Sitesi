{% extends 'frontbase.html.twig' %}

{% block title %}   {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords}} {% endblock %}
{% block description %}  {{ data[0].description}} {% endblock %}
{%  block sidebar  %}{{ include ('home/_sidebar.html.twig') }} {% endblock %}
{% block content %}
    <div class="col-sm-9 padding-right">
        <div class="features_items"><!--features_items-->
            <h2 class="title text-center">{{ data[0].title }}</h2>

            {% for rs in products %}
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt="" />
                                        <h2>{{ rs.sprice }}TL</h2>
                                        <p>{{ rs.title }}</p>
                                        <a href="{{ path('product_detail', {'id': rs.id }) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>{{ rs.sprice }}TL</h2>
                                            <p>{{ rs.title }}</p>
                                            <a href="{{ path('product_detail', {'id': rs.id }) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Ürünü İncele</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            {% endfor %}

        </div>
    </div>
    </section>
{% endblock %}
