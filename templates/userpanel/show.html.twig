{% extends 'frontbase.html.twig' %}

{% block title %}Bilgilerim{% endblock %}
{% block sidebar %}

    <style>
        ul#menu-v, #menu-v ul
        {
            width:254px; /* Main Menu width */
            border:1px solid rgba(190,190,190,0.3);
            list-style:none; margin:0; padding:0;
            z-index:9;
        }

        #menu-v li
        {
            margin:0;padding:0;
            position:relative;
            background-color:#f7e1b5; /*fallback color*/
            background-color:rgba(0,0,0,0.4);
            transition:background 0.2s;
        }
        #menu-v li:hover
        {
            background-color:rgba(0,0,0,0.2);
        }

        #menu-v a
        {
            font:normal 14px Arial;
            border-top:0px solid rgba(190,190,190,0.3);
            display:block;
            color:#EEEEEE;
            text-decoration:none;
            line-height:30px;
            padding-left:22px;
            position:relative;
        }

        #menu-v li:first-child a
        {
            border-top:0;
        }
        #menu-v a:hover {
            background-color: #f0ad4e;
            color:white;
        }
        #menu-v a.arrow::after{
            content:'';
            position:absolute;
            display:inline;
            top:50%;
            margin-top:-4px;
            right:8px;
            border-width:4px;
            border-style:solid;
            border-color:transparent transparent transparent white;
            transition:border-color 0.5s;
        }

        #menu-v li a.arrow:hover::after
        {
            border-color:transparent transparent transparent #FFFFFF;
        }

        /*Sub level menu items
        ---------------------------------------*/
        #menu-v li ul
        {
            min-width:180px; /* Sub level menu min width */
            position:absolute;
            display:none;
            left:100%;
            top:50%; transform:translateY(-50%);
        }

        #menu-v li:hover > ul
        {
            display:block;
        }
    </style>
    {{ include ('home/_usersidebar.html.twig') }}
{% endblock %}
{% block content %}
    <div class="container">
        <div class="table-responsive cart_info">
            <div class="col-sm-8 col-sm-offset-1">
                <h3>Üyelik Profil Bilgilerim</h3>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ app.user.id }}</td>
                    </tr>
                    <tr>
                        <th>Ad ve Soyad</th>
                        <td>{{ app.user.name }}</td>
                    </tr>
                    <tr>
                        <th>Mail Adresi</th>
                        <td>{{ app.user.email }}</td>
                    </tr>

                    <tr>
                        <th>Rolü</th>
                        <td>{{ app.user.roles|join }}</td>
                    </tr>
                    <tr>
                        <th>Durum</th>
                        <td>{{ app.user.status }}</td>
                    </tr>
                    <tr>
                        <th>Adresi</th>
                        <td>{{ app.user.address }}</td>
                    </tr>
                    <tr>
                        <th>Şehir</th>
                        <td>{{ app.user.city }}</td>
                    </tr>
                    <tr>
                        <th>Telefon</th>
                        <td>{{ app.user.phone }}</td>
                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </section>

{% endblock %}
